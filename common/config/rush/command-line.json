{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/command-line.schema.json",
  "commands": [
    {
      "name": "build:watch",
      "commandKind": "bulk",
      "summary": "Runs the defined `build:watch` command in all packages",
      "safeForSimultaneousRushProcesses": false,
      "enableParallelism": true,
      "ignoreDependencyOrder": false,
      "ignoreMissingScript": true,
      "allowWarningsInSuccessfulBuild": true,
      "incremental": true,
      "disableBuildCache": true,
      "watchForChanges": true
    },
    {
      "name": "lint-staged",
      "commandKind": "global",
      "summary": "Used by the pre-commit Git hook. Invokes ESLint+Prettier to lint and reformat staged changes.",
      "safeForSimultaneousRushProcesses": true,
      "shellCommand": "lint-staged",
      "autoinstallerName": "rush-lint-staged"
    }
  ],
  "parameters": []
}
